<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>JobFinder</title>
    <%- include("partials/link.ejs"); -%>
    <style>
      body {
        background-color: #fff;
      }
    </style>
</head>
  <body>
    <%- include("partials/navbar.ejs"); -%>

<% if(logStatus === "success") { %>
  <script>
  Swal.fire(
  'Successfully LoggedIn!',
  'You clicked the button!',
  'success'
  )
  </script>
<% } %>
<% jobs.forEach(function(job) { %>
      <div class="job-div">
        <i class="fas fa-building"><h1 class="loc-p jobs-h1"><i><%= job.companyName %></i></h1></i>
        <br>
        <br>
        <p>Job Title:<br><span class="title-p"><%= job.title %></span></p>
        <br>
        <i class="fas fa-map-marker-alt loc-logo"><p class="loc-p"><%= job.location %></p></i><br>
        <br>
        <i class="fas fa-user-graduate"><p class="loc-p"><%= job.education %></p></i>
        <br>
        <br>
        <p>Skills:<br><%= job.skills %></p>
        <br>
        <i class="fas fa-briefcase"><p class="loc-p"><%= job.experience %></p></i>
        <br>
        <br>
        <p>Description:<br><%= job.description %></p><br>
        <form class="" action="/application-form" method="post">
          <button type="submit" class = "btn btn-md btn-primary job-btn" name="apply" value="<%= job.company_name %>">Apply Here</button>
        </form>
      </div>
      <% }); %>
      <!-- BootStrap Javascript Link -->
      <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
      <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

  </body>
  <%- include("partials/footer.ejs"); -%>
</html>
